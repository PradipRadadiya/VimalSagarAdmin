<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailinfo_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_information"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">


            <TextView
                android:id="@+id/ttitle"
                style="@style/tablet7_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title :"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_titles"
                style="@style/tablet7_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tdescription"
                style="@style/tablet7_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_description"
                style="@style/tablet7_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <TextView
                style="@style/tablet7_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location :"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_address"
                style="@style/tablet7_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="" />


            <TextView
                android:id="@+id/tdate"
                style="@style/tablet7_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_date"
                style="@style/tablet7_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="" />

            <TextView
                style="@style/tablet7_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videolink :"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_videolink"
                style="@style/tablet7_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"

                android:text="" />

            <TextView
                android:id="@+id/txt_img"
                style="@style/tablet7_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_photo"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_audio"
                style="@style/tablet7_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Audio"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/rel_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <com.example.jean.jcplayer.JcPlayerView
                    android:id="@+id/jcplayer_audio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="50dp"
                    android:src="@drawable/play"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_video"
                style="@style/tablet7_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textColor="@color/lable"
                tools:ignore="HardcodedText" />

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/video_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tlike"
                    style="@style/tablet7_textview"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Like :"
                    android:textColor="@color/lable"

                    tools:ignore="HardcodedText" />

                <TextView

                    android:id="@+id/detaillike"
                    style="@style/tablet7_textview"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color3"

                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/eventlike"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:text="View"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tcomment"
                    style="@style/tablet7_textview"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comment:"
                    android:textColor="@color/lable"

                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/detailcomment"
                    style="@style/tablet7_textview"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color3"

                    />

                <Button
                    android:id="@+id/infocomment"
                    style="@style/tablet7_textview"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:text="View"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:gravity="right"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/btn_edit"
                    style="@style/tablet7_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:text="Edit"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/btn_delete"
                    style="@style/tablet7_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Delete"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
