<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailinfo_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_information"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">


            <TextView
                android:id="@+id/ttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title :"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tablet10_edittext"
                />

            <TextView
                android:id="@+id/tdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post :"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tablet10_edittext"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tablet10_edittext"
                android:text="" />


            <TextView
                android:id="@+id/tdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tablet10_edittext"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videolink :"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_videolink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                style="@style/tablet10_edittext"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:scaleType="fitXY"
                style="@style/tablet10_edittext"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <com.example.jean.jcplayer.JcPlayerView
                android:id="@+id/jcplayer_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                tools:ignore="HardcodedText" />

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/video_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/tablet10_edittext"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tlike"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Like :"
                    android:textColor="@color/lable"
                    style="@style/tablet10_textview"

                    tools:ignore="HardcodedText" />

                <TextView

                    android:id="@+id/detaillike"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color3"
                    style="@style/tablet10_textview"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/infolike"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:text="View"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="HardcodedText"
                    style="@style/tablet10_button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tcomment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comment:"
                    android:textColor="@color/lable"
                    style="@style/tablet10_textview"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/detailcomment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color3"
                    style="@style/tablet10_textview"
                    />

                <Button
                    android:id="@+id/infocomment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:text="View"
                    style="@style/tablet10_button"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:gravity="right"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">


                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Delete"
                    android:textColor="@color/white"
                    style="@style/tablet10_button"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
