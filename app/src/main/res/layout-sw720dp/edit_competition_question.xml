<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <include layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <TextView
            style="@style/tablet10TextviewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="@color/lable"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/color3"
            android:textSize="40sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
        android:id="@+id/edit_question"
        style="@style/tablet10_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_round"
        android:hint="Question"
        android:inputType="text"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btn_update"
        style="@style/tablet10_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_new_round"
        android:text="Update"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />
</LinearLayout>