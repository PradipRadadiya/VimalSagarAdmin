<?xml version="1.0" encoding="utf-8"?>


<com.alexandrius.accordionswipelayout.library.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2sp"
    android:layout_marginLeft="2sp"
    android:layout_marginRight="2sp"
    android:layout_marginTop="2sp">


    <LinearLayout
        android:id="@+id/lin_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_round_item"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text="Guru Purnima"
                android:textColor="@color/lable"
                style="@style/tablet10_textview"
                android:layout_weight="9"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_thought" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="10sp"
            android:text="The three types used by an asynchronous task are the following.The three types used by an asynchronous task are the following.The three types used by an asynchronous task are the following"
            android:textSize="40sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:gravity="right|bottom"
            android:paddingBottom="5sp"
            android:text="15/02/2017"
            android:textSize="24sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/approve"
                android:gravity="center"
                android:padding="10sp"
                style="@style/tablet10_textview"
                android:text="Edit"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_delete"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/reject"
                android:gravity="center"
                android:padding="10sp"
                style="@style/tablet10_textview"
                android:text="Delete"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </LinearLayout>
</com.alexandrius.accordionswipelayout.library.SwipeLayout>