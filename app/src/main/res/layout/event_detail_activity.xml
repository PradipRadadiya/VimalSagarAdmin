<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp"
            tools:ignore="ExtraText">


            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title :"
                android:textColor="@color/lable"
                android:textSize="18sp"

                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                style="@style/textsizeall"
                android:id="@+id/txt_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lable"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                style="@style/textsizeall"
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"

                />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location :"
                android:textColor="@color/lable"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                style="@style/textsizeall"
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text="" />


            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textColor="@color/lable"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                style="@style/textsizeall"
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text="" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videolink :"
                android:textColor="@color/lable"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                style="@style/textsizeall"
                android:id="@+id/txt_videolink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:padding="8sp"
                android:text="" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                android:id="@+id/txt_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="@color/lable"
                android:textSize="18sp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lable" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="1sp"
                    android:layout_height="50sp"
                    android:background="@color/lable" />

                <ImageView
                    android:id="@+id/img_photos"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/kprogresshud_grey_color"
                    android:padding="5dp"
                    android:src="@drawable/gallary"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="1sp"
                    android:layout_height="50sp"
                    android:background="@color/lable" />

                <ImageView
                    android:id="@+id/img_audios"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/audio"
                    tools:ignore="ContentDescription,InconsistentLayout" />

                <View
                    android:layout_width="1sp"
                    android:layout_height="50sp"
                    android:background="@color/lable" />

                <ImageView
                    android:id="@+id/img_video_icon"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/video"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="1sp"
                    android:layout_height="50sp"
                    android:background="@color/lable" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lable" />
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleview_slide"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/recycleviewborder"

                    />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:visibility="gone"
                    android:id="@+id/txt_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/recycleviewborder"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="No Data"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>


            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Audio"
                android:textColor="@color/lable"
                android:textSize="18sp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/rel_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:visibility="gone">

                <com.example.jean.jcplayer.JcPlayerView
                    android:id="@+id/jcplayer_audio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="50dp"
                    android:src="@drawable/play"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textColor="@color/lable"
                android:textSize="18sp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/rel_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                tools:ignore="InconsistentLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="50dp"
                    android:src="@drawable/play"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Like :"
                    android:textColor="@color/lable"
                    android:textSize="18sp"


                    tools:ignore="HardcodedText" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView

                    android:id="@+id/detaillike"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color3"
                    android:textSize="20sp"

                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/eventlike"
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:text="View"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comment:"
                    android:textColor="@color/lable"
                    android:textSize="18sp"

                    tools:ignore="HardcodedText" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:id="@+id/detailcomment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color3"
                    android:textSize="20sp"

                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/infocomment"
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:text="View"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="10sp"
                tools:ignore="RtlHardcoded">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:id="@+id/txt_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:gravity="right"
                    android:text="0"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,InconsistentLayout,RtlHardcoded" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:gravity="right"
                    android:text="Views"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:gravity="right"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Edit"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_marginLeft="5sp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Delete"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
