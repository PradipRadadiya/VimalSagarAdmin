<?xml version="1.0" encoding="utf-8"?>


<com.alexandrius.accordionswipelayout.library.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2sp"
    android:layout_marginTop="2sp"
    android:layout_marginRight="2sp"
    android:layout_marginBottom="2sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_round_item"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="Guru Purnima"
                    android:textColor="@color/lable"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_description"
                style="@style/textsizeall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:padding="10sp"
                android:text="The three types used by an asynchronous task are the following.The three types used by an asynchronous task are the following.The three types used by an asynchronous task are the following"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />


            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_date"
                style="@style/textsizeall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:gravity="right"
                android:text="15/02/2017"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_views"
                style="@style/textsizeall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:gravity="right"
                android:text="120 Views"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_time"
                style="@style/textsizeall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:ellipsize="end"
                android:gravity="right"
                android:lines="1"
                android:maxLength="25"
                android:text="time"
                android:textSize="12sp"
                android:visibility="gone"
                tools:ignore="HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/btn_play"
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/audio"
                    android:text="Play"

                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                >

                <LinearLayout
                    android:id="@+id/lin_like"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/round_rect_shape"
                    android:layout_margin="5sp"
                    >

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:id="@+id/txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_thumb_up"
                        android:drawableLeft="@drawable/ic_thumb_up"
                        android:drawablePadding="5sp"
                        android:gravity="center_vertical"
                        android:padding="5sp"
                        android:text="100"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_comment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/round_rect_shape"
                    android:layout_margin="5sp"
                    >

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_comment_black"
                        android:drawableLeft="@drawable/ic_comment_black"
                        android:drawablePadding="5sp"
                        android:gravity="center_vertical"
                        android:padding="5sp"
                        android:text="85"
                        android:textColor="@color/black" />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:id="@+id/txt_edit"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/approve"
                    android:gravity="center"
                    android:padding="8sp"
                    android:text="Edit"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:id="@+id/txt_delete"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/reject"
                    android:gravity="center"
                    android:padding="8sp"
                    android:text="Delete"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="ExtraText">

            />
        </LinearLayout>

    </RelativeLayout>

</com.alexandrius.accordionswipelayout.library.SwipeLayout>