<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:paddingBottom="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textColor="@color/black"
                android:textSize="18sp"

                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/color3"
                android:textSize="18sp"

                tools:ignore="HardcodedText" />
        </LinearLayout>

        <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
            android:id="@+id/e_title"
            style="@style/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:background="@drawable/edittext_round"
            android:hint="Category Name"
            android:inputType="text"
            android:lines="1"
            android:padding="10sp"
            android:text=""
            tools:ignore="HardcodedText" />


        <ImageView
            android:id="@+id/img_category_icon"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
            android:id="@+id/txt_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:background="@drawable/edittext_round"
            android:gravity="center"
            android:padding="10sp"
            android:text="Select Photo"
            android:textColor="@color/lable"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/round_rect_shapeoneselect"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />


        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="35dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>