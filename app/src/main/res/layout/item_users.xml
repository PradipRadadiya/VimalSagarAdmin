<?xml version="1.0" encoding="utf-8"?>


<com.alexandrius.accordionswipelayout.library.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_round_item"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextViewBold
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text="Guru Purnima"
                android:textColor="@color/lable"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:ellipsize="end"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:paddingRight="10sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textSize="18sp"
                android:ellipsize="end"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:paddingRight="10sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text=""
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:paddingRight="10sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:gravity="right|bottom"
                android:paddingBottom="5sp"
                android:text="15/02/2017"
                android:textSize="18sp"
                android:lines="1"
                android:textColor="@color/black"
                android:ellipsize="end"
                tools:ignore="HardcodedText,RtlHardcoded" />


            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_edit_name"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/round_rect_shapeoneselect"
                android:textColor="@color/white"
                android:textSize="18sp"

                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2sp"
            android:background="@color/green"
            android:visibility="gone"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lin_approve"
            android:background="@color/color3"
            android:visibility="gone"
            android:layout_margin="5dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </RelativeLayout>
</com.alexandrius.accordionswipelayout.library.SwipeLayout>
