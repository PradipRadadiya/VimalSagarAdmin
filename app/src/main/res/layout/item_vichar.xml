<?xml version="1.0" encoding="utf-8"?>


<com.alexandrius.accordionswipelayout.library.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_round_item"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            >



            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_vichar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:ellipsize="end"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="7dp"
                android:textSize="16sp"
                android:paddingRight="10sp"
                tools:ignore="HardcodedText" />


            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:gravity="right|bottom"
                android:paddingBottom="5sp"
                android:text="15/02/2017"
                android:textSize="16sp"
                android:lines="1"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText,RtlHardcoded" />


            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_edit_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/round_rect_shapeoneselect"
                android:textColor="@color/white"
                android:textSize="18sp"

                tools:ignore="HardcodedText" />

        </LinearLayout>


    </RelativeLayout>
</com.alexandrius.accordionswipelayout.library.SwipeLayout>
