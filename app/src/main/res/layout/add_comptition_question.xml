<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/sendnotification" />

        <Switch
            android:id="@+id/notificationswitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:padding="10dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:paddingBottom="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    tools:ignore="HardcodedText" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color3"
                    android:textSize="18sp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
                android:id="@+id/e_title"
                style="@style/edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@drawable/edittext_round"
                android:hint="Enter Question"
                android:inputType="textMultiLine"
                android:padding="10sp"
                android:text=""
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question Type"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    tools:ignore="HardcodedText" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color3"
                    android:textSize="18sp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_qtype"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/spinner"
                android:padding="5sp" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select option"
                    android:textColor="@color/lable"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color3"
                    android:textSize="18sp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_option"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/spinner"
                android:padding="5sp" />

            <LinearLayout
                android:id="@+id/lin_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer"
                    android:textColor="@color/lable"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color3"
                    android:textSize="18sp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner_q_answer"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/spinner"
                    android:padding="5sp"
                    tools:ignore="InconsistentLayout" />

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                    android:id="@+id/txt_sel_answer"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/back_rect"
                    android:gravity="center"
                    android:text="Select Answer"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:background="@drawable/round_rect_shapeoneselect"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>