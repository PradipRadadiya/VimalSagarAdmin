<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <include
            layout="@layout/toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical"
                android:paddingBottom="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/color3"
                        android:textSize="18sp"

                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
                    android:id="@+id/entername"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_round"
                    android:hint="Enter Name"
                    android:inputType="text"
                    android:lines="1"
                    android:padding="10sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/color3"
                        android:textSize="18sp"

                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
                    android:id="@+id/eemail"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_round"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:padding="10sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/color3"
                        android:textSize="18sp"

                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
                    android:id="@+id/emobile"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_round"
                    android:hint="Enter Mobile"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="10"
                    android:padding="10sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/color3"
                        android:textSize="18sp"

                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
                    android:id="@+id/eusername"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_round"
                    android:hint="Enter Username"
                    android:inputType="text"
                    android:lines="1"
                    android:padding="10sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/color3"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>


                <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
                    android:id="@+id/epassword"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_round"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:padding="10sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/color3"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>


                <com.example.grapes_pradip.vimalsagaradmin.util.CustomEditText
                    android:id="@+id/ecpassword"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_round"
                    android:hint="Enter Confirm Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:padding="10sp"
                    tools:ignore="HardcodedText,InconsistentLayout" />


                <Button
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/round_rect_shapeoneselect"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>