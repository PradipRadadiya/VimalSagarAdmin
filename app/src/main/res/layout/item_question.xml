<?xml version="1.0" encoding="utf-8"?>


<com.alexandrius.accordionswipelayout.library.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="10sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_round_item"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_title"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text=""
                android:textColor="@color/lable"
                android:textSize="17sp"
                android:layout_weight="9"
                android:lineSpacingExtra="7sp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/customdrawablecheckbox"
                android:id="@+id/checkbox_question"
                />

        </LinearLayout>

        <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:gravity="right|bottom"
            android:paddingBottom="5sp"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/color3"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:gravity="right|bottom"
            android:paddingBottom="5sp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            tools:ignore="RtlHardcoded">

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:gravity="right"
                android:text=""
                android:textSize="17sp"
                tools:ignore="HardcodedText,InconsistentLayout,RtlHardcoded" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:gravity="right"
                android:text=""
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_edit"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                android:background="@drawable/round_rect_shapeoneselect"
                android:textColor="@color/white"
                android:padding="8sp"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_margin="10sp"
                tools:ignore="HardcodedText" />

            <com.example.grapes_pradip.vimalsagaradmin.util.CustomTextView
                android:id="@+id/txt_delete"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:background="@drawable/round_rect_shapeoneselect"
                android:textColor="@color/white"
                android:padding="8sp"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_margin="10sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </LinearLayout>
</com.alexandrius.accordionswipelayout.library.SwipeLayout>